<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="invoice_cash_flow_view_tree" model="ir.ui.view">
            <field name="name">Cash flow invoice</field>
            <field name="model">account.invoice</field>
            <field name="priority" eval="30"/>
            <field name="arch" type="xml">
                <tree string="Fatture" editable="bottom">
                    <field name="sequence_number_next"/>
                    <field name="name" invisible="1"/>
                    <field name="date_invoice"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="partner_shipping_id" domain="[('parent_id', '=', partner_id)]" context="{'default_parent_id': partner_id, 'default_type': 'delivery'}"/>
                    <field name="payment_term_id"/>
                    <field name="fiscal_position_id"/>
                    <field name="team_id"/>
                    <field name="manual_total"/>
                    <field name="amount_untaxed" invisible="1"/>
                    <field name="amount_total" invisible="1"/>
                    <field name="state" invisible="1"/>
                    <button name="generate_payment" type="object" string="Genera Pagamenti"/>
                </tree>
            </field>
        </record>
        <record id="invoice_cash_flow_view_action" model="ir.actions.act_window">
            <field name="name">Fattura per cash Flow</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.invoice</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="invoice_cash_flow_view_tree"/>
        </record>

        <record id="invoice_payment_view_action" model="ir.actions.act_window">
            <field name="name">Pagamenti</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form,pivot,graph</field>
        </record>

        <menuitem id="menu_cash_flow_root" name="Cash Flow" sequence="1"/>
            <menuitem id="menu_list_root" name="Anagrafichee" parent="menu_cash_flow_root" sequence="10"/>
                <menuitem id="menu_list_partner" name="Partner" parent="menu_list_root" sequence="10" action="base.action_partner_form"/>

            <menuitem id="menu_invoice_root" name="Fatture" parent="menu_cash_flow_root" sequence="20"/>
                <menuitem id="menu_invoice_invoice" name="Elenco" parent="menu_invoice_root" sequence="10" action="invoice_cash_flow_view_action"/>
                <menuitem id="menu_payment" name="Pagementi" parent="menu_invoice_root" sequence="20" action="invoice_payment_view_action"/>

    </data>
</odoo>
